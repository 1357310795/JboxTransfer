<UserControl x:Class="JboxTransfer.Views.Dialogs.RichTextDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JboxTransfer.Views.Dialogs"
             mc:Ignorable="d"  d:Background="AliceBlue" MinWidth="500" MaxHeight="500"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="rich" MinWidth="500" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
        <Button Margin="0,8,0,0" Content="确定" Grid.Row="1" HorizontalAlignment="Right" Click="Button_Click"/>
    </Grid>
</UserControl>
